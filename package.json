{
  "name": "checkable-css-modules",
  "version": "0.7.0",
  "description": "Creates .d.ts files from CSS Modules .css files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.src.json",
    "lint": "run-s -c lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:tsc": "run-s -c lint:tsc:*",
    "lint:tsc:src": "tsc -p tsconfig.src.json --noEmit",
    "lint:tsc:test": "tsc -p tsconfig.test.json --noEmit",
    "test": "jest"
  },
  "bin": {
    "tcm": "bin/tcm.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizdra/checkable-css-modules.git"
  },
  "keywords": [
    "css-modules",
    "typescript"
  ],
  "files": [
    "bin",
    "src",
    "dist"
  ],
  "author": "mizdra",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "camelcase": "^6.3.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "convert-source-map": "^1.8.0",
    "css-modules-loader-core": "^1.1.0",
    "glob": "^8.0.3",
    "postcss": "6.0.1",
    "postcss-modules": "^4.3.1",
    "postcss-selector-parser": "^6.0.10",
    "source-map": "^0.7.4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@mizdra/eslint-config-mizdra": "^1.2.0",
    "@mizdra/prettier-config-mizdra": "^1.0.0",
    "@types/convert-source-map": "^1.5.2",
    "@types/css-modules-loader-core": "^1.1.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.6",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.0.6",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "pnpm": {
    "overrides": {
      "@types/css-modules-loader-core>postcss": "6.0.1",
      "css-modules-loader-core>postcss": "6.0.1",
      "postcss-modules>postcss": "6.0.1"
    }
  },
  "peerDependencies": {
    "postcss": "^6.0.0"
  },
  "packageManager": "pnpm@7.5.2",
  "prettier": "@mizdra/prettier-config-mizdra"
}
